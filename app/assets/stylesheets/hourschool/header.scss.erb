@import 'hourschool/variables';

#logo {
  position: relative;
  float: left;
  display: block;
  width: 122px;
  height: 125px;
  margin-bottom: 10px;
  background: url( <%= asset_path 'v2/Logo_Orange_withHover.png' %> );
}

a#logo:hover { background-position: -122px 0; }

#username { margin-left: 1px; }
#homepage #username {color: white; }

#login {
  @include hourschool-heading;
  position: relative;
  float: right;
  color: #4f4e4e;
  font-size: 10px;
  letter-spacing: 0.1em; }
  
#homepage #login {color: white}

li {
  &#login {
    float: right;
    color: #4f4e4e;
    margin-left: 10px;
    top: 0px; }
  &#login_peerlearning {
    float: left;
    color: #8f8f8f;
    margin-left: 10px; } }

#homepage li#login_peerlearning {color: white; }

li#homepage_login {
  float: left;
  color: white;
  margin-left: 10px; }

img.profile-arrow {
  margin-bottom: 1px;
  margin-left: 5px; }

.profile-avatar {
  width: 25px;
  height: 25px;
  float: left;
  margin-top: -5px;
  margin-right: 7px;
  background-color: #ccc; }

#dropdown-box {
  @include hourschool-border-radius;
  border: 1px solid #ccc;
  background-color: $hourschool-wrapper-color;
  position: absolute;
  top: 25px;
  right: 0px;
  z-index: 99;
  padding: 10px;}

tr {
  &#dropdown-text {
    color: #ccc;
    border-bottom: 1px solid #ccc; }
  &#dropdown-text-last {
    color: #ccc; } }

td#dropdown-text {
  font-weight: 700;
  font-size: 12px;
  color: #666666;
  padding-top: 3px;
  padding-bottom: 3px;
  padding-right: 30px; }

#not_logged_in {
  position: relative;
  float: left;
  padding-right: 10px;
  color: #4f4e4e; }

#homepage #not_logged_in {color: white;}

a#not_logged_in {
  color: #4f4e4e;
  &:visited {
    color: #4f4e4e; }
  &:hover {
    color: $hourschool-house-color; } }

#homepage a#not_logged_in {
  color: white;
  &:visited {
    color: white; }
  &:hover {
    color: #ffbd9c; } }

#peer-learning-at {
  @include hourschool-heading;
  position: relative;
  float: left;
  margin-left: 10px;
  font-size: 10px;
  letter-spacing: 0.1em; }

/*NAV*/

table#community_menu {
  @include hourschool-heading;
  position: relative;
  float: right;
  margin-top: 12px;
  border-collapse: collapse;
  margin-bottom: 20px; 
  height: 60px;
  vertical-align: middle;
  &:hover {
    color: $hourschool-house-color; }
  &:active {
    color: $hourschool-house-color; }
  &#menu-active {
    color: $hourschool-house-color; }
  &#menu-inactive {
    color: #8f8f8f; }
  #menu18 {
    font-weight: 700;
    font-size: 18px;
    letter-spacing: 0.2em;
    line-height: 20px; }
  #menu9 {
    font-weight: 400;
    font-size: 10px;
    font-style: italic; }
  #menu_faq {
    font-weight: 700;
    font-size: 12px;
    letter-spacing: 0.1em;} 
  }

  #homepage {
    #menu18 {color: white; }
    #menu9 {color: white; }
    #menu_faq {color: white; }
  }

#community_menu_teach, #community_menu_suggest, #community_menu_about{
    border: 1px solid #d0cdcd;
    text-align: center;
    }

#community_menu_learn, #community_menu_faq {
    border-top: 1px solid #d0cdcd;
    border-bottom: 1px solid #d0cdcd;
    border-left: 0px;
    border-right: 0px;
    text-align: center;
    }
    
#community_menu_learn, #community_menu_teach, #community_menu_suggest, #community_menu_about {
    width: 189px; 
    }
    
#community_menu_faq {
    width: 67px; 
    }


/*SUB-NAV*/

a {
  &.sub-nav-active {
    color: black; }
  &.sub-nav-inactive {
    color: #8f8f8f; }
  &.sub-nav-active:hover, &.sub-nav-inactive:hover {
    color: $hourschool-house-color; } }

ul.sub-nav {
  @include hourschool-heading;
  float: left;
  list-style: none;
  font-size: 12px;
  letter-spacing: 0.1em;
  margin-bottom: 20px; }

li {
  &.sub-nav-active, &.sub-nav-inactive {
    float: left;
    margin-right: 10px;
    padding-bottom: 3px; }
  &.sub-nav-active {
    border-bottom: 3px solid $hourschool-house-color;
    padding-left: 0px 10px; }
  &.sub-nav-inactive {
    padding: 0px 10px; } }
    
