@import 'hourschool/variables';

.homePageBackgroundImage1 {
  background-image: url( <%= asset_path 'bg-white-pattern.png' %> );
  background-repeat: repeat;
}

.font48{
  font-size: 48px;
  letter-spacing: 10px;
  line-height: 36pt;
}

.font24{
  font-size: 24px;
  letter-spacing: 10px;
  line-height: 36pt;
}

a#homepageInfoModal{
  position: relative;
  margin-left: 600px;
  font-family: Georgia;
  font-size: 14px;
  font-style: italic;
  text-align: center;
  color: white;
  z-index: 100;
}

#homepage .teaser {
  position: relative;
  height: 190px;
  width: 400px;
  margin-left: 560px;
  margin-top: 20px;
  @include hourschool-border-radius;
  background-color: black;
  opacity: 0.4;
}

#homepage .featured {
  position: relative;
  z-index: 10;
  width: 960px;
  margin: auto;
}

.brand_bg {
  background-color: $hourschool-house-color;
  height: 7px; }

.prompt-box{
  padding: 20px;
  opacity: 0.85;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
  -webkit-box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
  -moz-box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
}

p.prompt-text{
  position: relative;
  font-family: Georgia;
  font-style: italic;
  font-size: 16px;
  color: white;
  margin: 10px 0px 20px 0px;
}

.title-text{
  font-family: Georgia;

  &#homepage{
    font-size: 26px;
    color: #666;
    line-height: 36pt;
  }

  &#explore{
    font-size: 20px;
    line-height: 20pt;
    color: #006699;
  }
}

#homepage .body-text{
  font-family: Georgia;
  font-size: 16px;
  color: #333;
  line-height: 20pt;
}

#homeSearchForm-background {
  position: relative;
  float: left;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  width: 399px;
  height: 50px;
  margin-left: 30px;
  background-color: white;
  opacity: 0.5;
  margin-top: 15px; }

img.mag-glass-homepage {
  position: relative;
  float: left;
  overflow: visible;
  z-index: 10;
  margin-top: -32px;
  margin-left: -376px; }

#homepageSearchForm {
  position: relative;
  float: left;
  border: 0px solid white;
  @include hourschool-border-radius;
  width: 352px;
  height: 32px;
  font-family: futura-pt-1, futura-pt-2;
  font-weight: 400;
  font-size: 13px;
  letter-spacing: 0.1em;
  padding-left: 33px;
  margin-top: -45px;
  margin-left: 35px;
  margin-bottom: 15px;
  overflow: visible;
  z-index: 10; }

#homepageSearchButton {
  border: none;
  background: #00B6FF;
  color: #fff;
  position: relative;
  float: right;
  width: 110px;
  height: 33px;
  background-color: #e4652f;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
  border-radius: 5px;
  display: inline-block;
  color: white;
  @include hourschool-heading;
  font-size: 15px;
  letter-spacing: 0.2em;
  margin-top: 10px;
  margin-right: 22px;
  cursor: pointer; }

.viewMore {
  @include hourschool-heading;
  position: relative;
  float: right;
  font-size: 10px;
  letter-spacing: 0.1em;
  font-style: italic;
  color: #bbb;
  padding-right: 7px; }

img.arrow_small_pointright {
  padding-bottom: -10px;
  margin-left: 3px; }

.classRow-homepage {
  float: left;
  width: 900px;
  margin-top: -30px;
  margin-bottom: 0px;
  margin-left: 30px; }

.classBlock-homepage {
  @include hourschool-wrapper-block;
  float: left;
  width: 190px;
  height: 270px;
  background-color: white;
  margin-right: 45px; }

.classBlock-last-homepage {
  @include hourschool-wrapper-block;
  float: left;
  width: 190px;
  height: 270px;
  background-color: white;
 }

.happeningBlock-homepage {
  float: left;
  width: 220px;
  margin-right: 10px; }

.happening-message-header {
  @include hourschool-heading;
  color: #e4652f;
  font-size: 13px;
  letter-spacing: 0.2em;
  margin-top: 10px;
  a {
    &:hover, &:active, &:visited {
      color: #e4652f;
      text-decoration: none; } } }

.happening-message-description {
  padding-right: 10px;
  font-size: 11px;
  width: 220px; }