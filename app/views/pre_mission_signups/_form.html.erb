  <%= f.hidden_field :mission, :value => params[:mission] %>

  <div class="field">
    <%= f.label :description, 'Why are you interested?' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
