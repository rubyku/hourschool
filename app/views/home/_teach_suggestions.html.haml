
- suggestions.each do |t|
  - if current_user
    - if !current_user.voted_on?(t) 
      .vote-class.clearfix
        .vote-class-title
          .heading20-vote
            = "#{t.name}"
          .heading9-class
            = "Requested by #{get_user_name(t.requested_by)}"
          %table
            %tr
              %td
                = image_tag "v2/arrow_orange_pointright.png", :class => "view-more-arrow"
              %td  
                = link_to "I want to teach this class", new_course_path("req" => t.id)
            %tr
              %td
                = image_tag "v2/arrow_orange_pointright.png", :class => "view-more-arrow"
              %td  
                = link_to "I know someone who can teach this", nominate_path("id" => t.id)
        .vote-class-number
          .heading35-vote
            %span{:id => "vote_count_#{t.id}"}
              = "#{t.votes_for}"
          .heading10-vote 
            = "votes"
          .claim-class-button
            %span{:id => "vote_link_#{t.id}"}
              - if user_signed_in?
                - if !current_user.voted_on?(t)
                  = link_to "Teach", new_course_path("req" => t.id)
            
              - else
                = link_to_function "Teach", "alert('Please login to claim this class!')"
  - else
    .vote-class.clearfix
      .vote-class-title
        .heading20-vote
          = "#{t.name}"
        .heading9-class
          = "Requested by #{get_user_name(t.requested_by)}"
        %table
          %tr
            %td
              = image_tag "v2/arrow_orange_pointright.png", :class =>   "view-more-arrow"
            %td  
              = link_to "I want to teach this class", new_course_path("req" => t.id)
          %tr
            %td
              = image_tag "v2/arrow_orange_pointright.png", :class => "view-more-arrow"
            %td  
              = link_to "I know someone who can teach this", nominate_path("id" => t.id)
      .vote-class-number
        .heading35-vote
          %span{:id => "vote_count_#{t.id}"}
            = "#{t.votes_for}"
        .heading10-vote 
          = "votes"
        .claim-class-button
          %span{:id => "vote_link_#{t.id}"}
            - if user_signed_in?
              - if !current_user.voted_on?(t)
                = link_to "Teach", new_course_path("req" => t.id)
          
            - else
              = link_to_function "Teach", "alert('Please login to claim this class!')"
.page-section-float-right
  %table.view-more
    %tr
      %td
        = image_tag "v2/arrow_grey_pointright.png", :class => "view-more-arrow"

      %td
        = will_paginate suggestions, :previous_label => "Prev"
          
