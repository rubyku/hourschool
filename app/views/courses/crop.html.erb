
<% content_for(:head) do %>
<%= stylesheet_link_tag "jcrop/jquery.Jcrop" %>
<%= javascript_include_tag "jcrop/jquery.Jcrop.min.js" %>
<script type="text/javascript" charset="utf-8">
$(function() {
  $('#cropbox').Jcrop({
    onChange: update_crop,
    onSelect: update_crop,
    setSelect: [0, 0, 190, 120],
    aspectRatio: 1
  });
});

function update_crop(coords) {
  var rx = 100/coords.w;
  var ry = 100/coords.h;
  $('#preview').css({
    width: Math.round(rx * <%= @course.photo_geometry(:large).width %>) + 'px',
    height: Math.round(ry * <%= @course.photo_geometry(:large).height %>) + 'px',
    marginLeft: '-' + Math.round(rx * coords.x) + 'px',
    marginTop: '-' + Math.round(ry * coords.y) + 'px'
  });
  var ratio = <%= @course.photo_geometry(:original).width %> / <%= @course.photo_geometry(:large).width %>;
  $("#crop_x").val(Math.round(coords.x * ratio));
  $("#crop_y").val(Math.round(coords.y * ratio));
  $("#crop_w").val(Math.round(coords.w * ratio));
  $("#crop_h").val(Math.round(coords.h * ratio));
}
</script>
<% end %>

<%= image_tag @course.photo.url(:large), :id => "cropbox" %>

<h4>Preview:</h4>
<div style="width:190px; height:120px; overflow:hidden">
  <%= image_tag @course.photo.url(:large), :id => "preview" %>
</div>

<% form_for @course do |f| %>
  <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
    <%= f.hidden_field attribute, :id => attribute %>
  <% end %>
  <p><%= f.submit "Crop" %></p>
<% end %>