<table>
  <tr>
    <td>
      <a href="https://twitter.com/share"
         class="twitter-share-button"
         data-text="Check out this class I'm teaching:"
         <%- if local_assigns[:url] -%>
           data-url="<%= local_assigns[:url] %>"
         <%- end -%>
         data-count="horizontal"
         data-via="hourschool">Tweet</a><script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
    </td>

    <td>
      <a href="http://www.tumblr.com/share" title="Share on Tumblr" style="display:inline-block; text-indent:-9999px; overflow:hidden; width:129px; height:20px; margin-left: -20px; margin-right: 20px; background:url('http://platform.tumblr.com/v1/share_3T.png') top left no-repeat transparent;">Share on Tumblr</a>
      
    </td>

    <td>
      <div class="fb-like" data-send="true" data-layout="button_count" data-width="450" data-show-faces="false"></div>
    </td>
  </tr>
</table>

<%= content_for :head do %>
  <%- if local_assigns[:url] -%>
    <meta property="og:url" content="<%= local_assigns[:url] %>"/>
  <%- end -%>
<%- end -%>
