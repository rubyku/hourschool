.modal
  .welcome-header Contact your students

  = form_tag course_attendee_contacts_path, :method => 'post'  do
    = hidden_field_tag 'id', @course.id
    .form-question= "Message or question for all the students of the #{@course.title} class:"
    = text_area_tag 'message', '', :class => 'form-tall'
    .page-section-float-left
      = submit_tag "Send message", :class => "orange button"
      
      
