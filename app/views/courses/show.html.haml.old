.content
  = image_tag @course.photo.url
  %p
    %strong Title:
    = @course.title
  %p
    %strong Description:
    = @course.description
  %p
    %strong Price:
    = @course.price
  %p
    %strong Seats:
    = @course.max_seats
  %p
    %strong Date:
    = @course.date
  %p
    %strong Time:
    = @course.time
  %p
    %strong Place:
    = @course.place_name
  %p
    %strong City:
    = @course.city.name
  %p
    %strong Minimum:
    = @course.min_seats

  / %p
  /   = link_to "Edit", edit_course_path(@course)
  /   |
  /   = link_to "Destroy", @course, :confirm => 'Are you sure?', :method => :delete
  /   |
  /   = link_to "View All", courses_path
  %br/
  %p= "Number of students attending #{@course.students.size}"
  - if user_signed_in?
    - if current_user.is_teacher_for?(@course)
      = link_to "Edit", edit_course_path(@course)
      |
      = link_to "Destroy", @course, :confirm => 'Are you sure?', :method => :delete

    - else
      - if @course.is_a_student?(current_user)
        %p= "You have registered for this course"
      - else
        #register-course-link
          = link_to "Register", register_path("id" => @course.id), :remote => true

  %br/
  = link_to_function "Back", "history.back()"
  / = link_to image_tag('https://www.paypal.com/en_US/i/btn/btn_xpressCheckout.gif'), '#'
