<%= amazon_simple_pay_form_tag do %>
    <input type="hidden" name="referenceId" value="<%= @course.id %>" >
    <%= hidden_field_tag 'description', @course.title %>
    <% if @course.city.name == current_user.city %>
    <%= submit_tag "Yes I'm in!", :class => "register-class-button", :name => nil %>
    <% else %>
    <%= submit_tag "Yes I'm in!", :class => "register-class-button", :name => nil, :confirm => "You specified your location as #{current_user.city}. This class is in #{@course.city.name}! Are you sure you want to register for it?" %>
    <% end %>
    <br><br>
    <img src ="../../../images/amzn-payments.gif">
<% end %>


