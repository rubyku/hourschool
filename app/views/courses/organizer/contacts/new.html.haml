.modal
  .welcome-header Contact teacher

  = form_tag course_organizer_contacts_path, :method => 'post' do
    = hidden_field_tag 'id', @course.id
    .form-question= "Message to #{@course.teacher.name} for the #{@course.title} class:"
    = text_area_tag 'message', '', :class => 'form-tall'
    .page-section-float-left
      = submit_tag "Send message", :class => "orange button"
      
      
