.full-page
  .page-content
    - if @course.nosignup.nil?
      .confirm-second-message You have successfully signed up!
    - else @course.nosignup?
      .confirm-second-message Thanks for your interest!
    %hr#confirm

    .confirm-classblock
      - link_to @course do
        - if @course.photo.exists?
          = image_tag(@course.photo.url(:small), :size => "190x120")
          %img.class-arrow{:src => '/images/v2/arrow_white_pointup.png'}
        - else
          - if !@course.categories.first.nil?
            = image_tag("#{DEF_IMAGES[@course.categories.first.name]}",:size => "190x120")
          - else
            = image_tag("/images/v2-courses/DefaultClassPics_Generic.png",:size => "190x120")
        = image_tag '/images/v2/arrow_white_pointup.png', :class => 'class-arrow'
        
      .confirm-class-description
        .heading13-class
          = link_to @course.title, @course

        %table
          %tr
            %td.icon
              = image_tag "/images/v2/icon_pricetag.png", :class => "class-details-icon-cost"
            %td
              .class-details
                = "$ #{@course.price}"
          %tr
            %td.icon
              = image_tag "/images/v2/icon_calendar.png", :class => "class-details-icon-when"
            %td
              .class-details
                = @course.date.strftime("%a %b %d, %Y")
              .class-address-details
                = "#{@course.time_range}"

          %tr
            %td.icon
              = image_tag "/images/v2/icon_location.png", :class => "class-details-icon-where"
            %td
              .class-details
                = "#{@course.place_name}"
              - if @course.public?
                .class-sidebar-details
                  = "#{@course.address}"
              - else
                %p Private Address


    .confirm-messageBlock
      .confirm-bring-friend Bring a friend or two
      %p.confirm It's always more fun to learn with friends. Share this with people you think might be interested.
      = render :partial => "add_this_student"
    
      / = render :partial => "social_share", :locals => {:url => course_url(@course), :text => "Check out this class I just signed up for: ", :description => @course.description}

    / .confirm-description-block
    /   %p What would you like to do now?
    /   %br
    /   %span.list-number 1
    /   = link_to "Go to the class page", @course, :class => "orange-checklist"
    /   %br
    /   %span.list-number 2
    /   = link_to "View your profile", "/profile", :class => "orange-checklist"
    /   %br
    /   %span.list-number 3
    /   = link_to "Browse for more classes", "/learn", :class => "orange-checklist"
    .confirm-description-block
      - if current_user.facebook?
        %p.confirm Classes are more fun with friends! Invite a friend from Facebook!

        = render :partial => "users/facebook/autocomplete/share", :locals => { :link => course_url(@course), :name => "#{@course.title}",  :message => "I'm taking this class on Hourschool, you should sign up!"}

        = render :partial => "users/facebook/grid/share", :locals => {:message => "I'm taking this class on Hourschool, you should sign up!", :link    => course_url(@course), :name    => "#{@course.title}", :same_city => true , :limit => 5 }

      - else
        %p.confirm Classes are more fun with friends! Connect Facebook to your account today!
        = render :partial => 'users/facebook/connect_button'

