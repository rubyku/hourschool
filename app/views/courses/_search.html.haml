- if community_site?
  .searchBar.clearfix
    = form_tag courses_search_path(:all), :method => :get do
      = text_field_tag :q, request.params[:q], :class => 'searchForm', :placeholder => "Find a class to take", :style => "  position: relative; float: left; width: 95%; height: 20px; font-family: futura-pt-1, futura-pt-2; font-size: 13px; letter-spacing: 0.2em; margin-top: 20px; padding-left: 35px; color: black; border: 4px solid #ccc; opacity: 0.5; -moz-border-radius: 7px; -webkit-border-radius: 7px; border-radius: 7px;"
      = submit_tag 'Search', :class => "searchButton", :style => "width: 110px; margin-top: -42px; margin-right: 5px"
      = image_tag 'v2/search-magnifying-glass-orange.png', :class => 'mag-glass', :style => "margin-top: -33px; padding-right: 5px"
