    <div class="container_16">
      <div style="color: #f2f2f1; float: left">
        Copyright © 2012 Feast for Days
      </div>
      <div style="float: left; margin-left: 210px">
        <%= link_to (image_tag 'feastfordays/icon-tw.png', :style => "margin-right: 25px"), "https://www.twitter.com/feastfordays", :target => "_blank" %>
        <%= link_to (image_tag 'feastfordays/icon-fb.png', :style => "margin-right: 25px"), "https://www.facebook.com/feastfordays", :target => "_blank" %>
        <%= link_to (image_tag 'feastfordays/icon-email.png', :style => "margin-right: 25px"), "mailto:jonathan@feastfordays.com", :target => "_blank" %>
