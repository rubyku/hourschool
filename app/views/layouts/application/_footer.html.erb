      <div style="color: #f2f2f1; float: right">
        <%= link_to "FAQ", f4d_faq_path, :style => "color: #f2f2f1" %> |
        <%= link_to "About", f4d_about_path, :style => "color: #f2f2f1"  %> |
        <%= link_to "Terms and Conditions", f4d_terms_and_conditions_path, :style => "color: #f2f2f1"  %> |
        <%= link_to "Contact", "mailto:jonathan@feastfordays.com", :style => "color: #f2f2f1"  %>
      </div>
      <table id="powered-by" style="margin-top: 60px">
        <tr>
          <td>
            <div class="footer-powered-by">Powered by</div>
          </td>
          <td>
            <a href="http://www.hourschool.com" target="_blank">
              <%= image_tag('v2/Logo_Grey.png', :id => "powered-by-logo") %>
            </a>
          </td>
        </td>
      </table>
    </div>
  </div>


