.page-section-float-left.clearfix
	.welcome-header Admin Panel
	= image_tag "v2/greyheader_half.png", :class => "greyheader_half"

	%ul.sub-nav.clearfix
		- if current_account
			%li{:class => "sub-nav-#{'in' unless controller_name == 'accounts' && action_name == 'edit'}active"}
				= link_to 'Account', edit_account_path(:admin)
		- else
			%li{:class => "sub-nav-#{'in' unless controller_name == 'charts'}active"}
				= link_to 'Metrics', admin_charts_path(:admin)
		%li{:class => "sub-nav-#{'in' unless controller_name == 'courses' && action_name == 'proposals'}active"}
			= link_to 'Proposals', course_proposals_path
		%li{:class => "sub-nav-#{'in' unless controller_name == 'courses' && action_name == 'pending_live'}active"}
			= link_to 'Pending Live', course_pending_live_path
		%li{:class => "sub-nav-#{'in' unless controller_name == 'courses' && action_name == 'index'}active"}
			= link_to 'Courses', courses_path
		%li{:class => "sub-nav-#{'in' unless controller_name == 'users'}active"}
			= link_to 'Users', users_path