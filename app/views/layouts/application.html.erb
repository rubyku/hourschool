  <% end %>



  <%# Header %>
  <% if community_site? %>
    <%# do nothing %>
  <% elsif current_account == Account.where(:id => 1).first %>
    <%= render 'layouts/application/accounts/feastfordays' %>
  <% elsif current_account == Account.where(:id => 2).first %>
    <%= render 'layouts/application/accounts/a2reskilling' %>
  <% elsif current_account == Account.where(:id => 3).first %>
    <%= render 'layouts/application/accounts/missionzero' %>
  <% elsif current_account == Account.where(:id => 4).first %>
    <%= render 'layouts/application/accounts/womendesignbuild' %>
  <% elsif current_account == Account.where(:id => 5).first %>
    <%= render 'layouts/application/accounts/center61' %>
  <% elsif current_account == Account.where(:id => 7).first %>
    <%= render 'layouts/application/accounts/hubla' %>
  <% else %>
    <%= render 'layouts/application/accounts/generic_account' %>
  <%- end -%>

<%- end -%>


<%# Main Layout %>

<%= render :layout => 'layouts/document' do %>

  <% if community_site? %>
    <%= render 'layouts/application/header' unless yield(:body_id) == "mission_builder" %>
  <% end %>

  <%# Flash %>
  <div class='container_16'>
    <%- if flash[:error].present? -%>
      <div class="alert alert-error">
        <%= flash[:error] %>
      </div>
    <%- end -%>
    <%- if flash[:notice].present? -%>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <%- end -%>
    <%- if flash[:alert].present? -%>
     <div class="alert alert-error">
        <%= flash[:alert] %>
      </div>
    <%- end -%>
  </div>

  <%# Page Content %>
  <% unless yield(:body_id) == "homepage" %>
    <div class='container_16'>
    <%= yield %>
    </div>
  <% else %>
    <%= yield %>
  <% end %>

<%- end -%>

