<%= content_for :first_inside_body do %>

  <%# Notice Bar if not logged in %>
  <% if community_site? %>
    <% if !current_user || (current_user && current_user.crewmanships.blank?) %>
      <div class='userConfirm'>
        <div class='container_16'>
          <p>
            <span style="color: #b4c9d9">
              Hi there!
            </span>
            <span class='whiteText'>
              HourSchool is a place to achieve your goals by joining a mission.
            </span>
            <span style="text-decoration: underline; color: #f7b62a">
              <a data-toggle="modal" href="#explainMission" style="color: #f7b62a">Learn more!</a>
