<div class="page">
  <div class="page-content">

  <div class="page-section-float-left">
    <ul class="sub-nav">
      <li class="sub-nav-inactive">
        <a class="sub-nav-inactive" href="/users/sign_up">Register</a>
      </li>
      <li class="sub-nav-active">
        <a class="sub-nav-active" href="/users/sign_in">Sign in</a>
      </li>
    </ul>
  </div>

  <% if community_site? %>
    <div class="page-section-float-left">
    <div class="class-alternatives">It's fast and easy. And we will not post anything without your permission.</div>
      <br>
      <%  if resource_name.to_s == "user" %>
      <%= link_to image_tag('fb_connect.jpg'), user_omniauth_authorize_path(:facebook) %>
      <% end %>
    </div>

    <hr>
    <br />
    <p> Or sign in with email:</p>
  <% end %>


  <%- if resource.present? && resource.email.present? -%>
    <div class="page-section-float-left">
        <div class="error-block"><div class="form-error">* Email or Password is Incorrect</div></div>
    </div>
  <%- end -%>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-question">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-short" %>
        </div>

        <div class="form-question"><%= f.label :password %><br />
          <%= f.password_field :password , :class => "form-short" %>
        </div>

        <div class="page-section-float-left">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me, :checked => true %>
          <%= f.label :remember_me %>
          <% end -%>
        </div>

        <div class="page-section-float-left">
          <div><%= f.submit "Sign in", :id => "user_submit", :class => "loginButton" %></div>
        </div>
    <% end %>


    <div class="page-section-float-left">
      <%= render :partial => "devise/shared/links" %>
    </div>




  </div>
</div>