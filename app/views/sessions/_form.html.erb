<%- if resource.present? && resource.email.present? -%>
  <div class="page-section-float-left">
      <div class="error-block"><div class="form-error">* Email or Password is Incorrect</div></div>
  </div>
<%- end -%>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <p>
    <%= f.label :email, :class => "form-question" %><br />
    <%= f.email_field :email, :class => "form-short" %>
    </p>

    <p><%= f.label :password, :class => "form-question"%><br />
      <%= f.password_field :password , :class => "form-short" %>
    </p>

    <div class="page-section-float-left">
      <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, :checked => true, :style => "float: left; margin-right: 10px" %>
      <%= f.label :remember_me %>
      <% end -%>
    </div>

    <div class="page-section-float-left">

      <div>
        <%= f.submit "Sign in", :id => "user_submit", :class => "grey button" %></div>
  </div>
<% end %>

<div class="page-section-float-left">
  <%= render :partial => "devise/shared/links" %>
</div>