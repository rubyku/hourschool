<%= yield %>

<script type='text/javascript'>
  $('.facebookShare').delegate('a.facebookShareSubmit', 'click', function(event){
    target    = $(this);
    container = target.closest('.facebookShare');
    url       = target.data('url');
    message   = target.data('message');
    link      = target.data('link');
    name      = target.data('name');

    $.ajax({
      url:      target.data('url'),
      dataType: 'html',
      type:     'POST',
      data:     {message: message, link: link, name: name},
      success:  function(html) { container.replaceWith(html) },
      error:    function(html) { console.log('error')  }
    })
    return false;
  });
  $('.facebookShare').delegate('a.facebookShareDecline', 'click', function(event){
    target    = $(this);
    container = target.closest('.facebookShare');
    url       = target.data('url');
    $.ajax({
      url:      target.data('url'),
      dataType: 'html',
      success:  function(html) { container.replaceWith(html) },
      error:    function(html) { console.log('error')  }
    })

    return false;
  })



</script>

