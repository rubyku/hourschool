<div class="full-page">
  <div class="page-content">

    <% if current_user && admin_of_current_account? %> 
      <%= render :partial => 'layouts/application/admin_bar' %>

      <p><%= link_to '+ Invite a User', new_invite_users_path if current_account %></p>
      
      <div class="heading15 marcomm">Total users: 
        
      <% if community_site? %>
        <%= User.count %>
      <% else %>
        <%= current_account.users.count %>
      <% end %>
      
      </div>
      
      <% @users.each do |user| %>
        <div style="width: 430px; margin-right: 20px; float: left">
          <%= avatar_for(user, :photo_size => :thumb_large) %>        
          <%= link_to user.name, user_path(user.id), :class => "profile-link" %><br>
          <%= user.email %><br>
          City: <%= user.location %><br>
          Joined: <%= user.created_at.strftime("%b %d, %Y") %><br>
          <% if community_site? %>
            <%= user.memberships.collect(&:account).collect(&:name).to_sentence %><br>
            <%= link_to 'Edit', edit_user_registration_path %>
          <% else %>
              <% if Membership.find_by_account_id_and_user_id_and_admin(current_account.id, user.id, true) %>
                Admin
              <% else %>
                <%= link_to 'Make Admin', make_admin_user_path(user), :method => :put %>
              <% end %>
          <% end %>
          </p>
        </div>
      <% end %>


    <% else %>

      Sorry, you don't have admin access to this page. <br>
      Have a question? Please email us at hello at hourschool dot com.

    <% end %>

  </div>
</div>
