<div class="full-page">
  <div class="page-content">
    
 <p class="error"></p>
 
 <%= form_for @user, :url => {:action => "update"}, :method => :put, :html => {:class => 'inset', :id => 'form-signup'} do |f| %>
   
   
   <div>
     <%=  f.text_field :name , :placeholder => "Name", :class => "form-short" %>
   </div>
   <br><br>
   <div>
     <%=  f.text_field :email , :placeholder => "Email", :class => "form-short"  %>
   </div>
   <br><br>

   <br><br>
   <div>
     <%=  f.text_area :bio , :placeholder => "bio" %>
   </div>
   <div>
     <%=  f.submit "Next", :class => "send-message-button" %>
   </div>
 <% end %>

 <%= link_to "Skip", wizard_path(@next_step) %>

  </div>
</div>