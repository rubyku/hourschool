<div class="dashboard-feed-thumbnail">
  <%= image_tag(topic.mission.photo.url(:thumbnail)) %>
  <div style="font-size: 9px; line-height: 15px"><%= "#{time_ago_in_words topic.created_at} ago" %></div>
  <% if topic.mission.featured == true %>
    <span class="label">Staff picks</span>
  <% end %>
</div>

<div class="dashboard-feed-body">
  <div class="heading16 adelle" style="margin-bottom: 5px"><%= topic.title %></div>
  <div class="heading9" style="margin-bottom: 30px">New topic posted to <%= link_to "#{topic.mission.verb} #{topic.mission.title}", topic.mission %></div>
  <div class="left">
  <% if topic.user.photo.present? %>
    <%= link_to (image_tag topic.user.photo.url, :size => "35x35"), topic.user %>
  <% else %>
    <%= image_tag 'avatar.jpg', :size => "35x35" %>
  <% end %>
  </div>
  <div style="font-size: 11px; padding: 7px 0px 0px 45px">Added by <%= link_to topic.user.name, topic.user %></div>
</div>




